@model GovEgy_2.Models.For_Reservations

@{
    ViewBag.Title = "Create";
}
<div class="inner-banner ">
    <section class="w3l-breadcrumb text-left">
        <div class="container">
            <ul class="breadcrumbs-custom-path">
            </ul>
        </div>
    </section>
</div>




<div class="d-flex flex-column text-center mb-5 pt-5">
    <h4 class="logo title-big" style="font-style: normal; font-size: 30px;font:bolder  ">الحجز  <span class="text-danger">والاستفسار</span></h4>

</div>

@if (User.IsInRole("Admin"))
{
    <div class="btn btn-style btn-light mt-sm-3" href="about.html" style="color:white;text-align:center">
        @Html.ActionLink("صفحة اتصالاتنا", "Index")<i class="fa fa-arrow-right ml-2" aria-hidden="true"></i>
    </div>

    <div class="course-meta mt-1" style="text-align:center">

        <a class="grid-link btn btn-info" href=" @Url.Action("Index", "ServiceTypes")"> انشاء نوع الخدمة   </a>

    </div>
}
    <br />

    <hr />


    <br />

    <div style="margin-left:25%;margin-right:25%">

        @using (Html.BeginForm("Create", "For_Reservations", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">الاسم</h4>

                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">رقم التليفون</h4>

                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">البريد الالكتروني</h4>

                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">نوع الخدمة</h4>

                        @Html.DropDownList("S_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.S_Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">تاريخ الوصول</h4>

                        @Html.EditorFor(model => model.Date_Of_Arrival, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Date_Of_Arrival, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">تاريخ المغادرة</h4>

                        @Html.EditorFor(model => model.Departure_Date, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Departure_Date, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">صورة جواز السفر</h4>
                        <input id="Passport" type="file" name="file" />
                        @Html.ValidationMessageFor(model => model.Passport, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">التفاصيل</h4>

                        @Html.TextAreaFor(model => model.Details, 10, 40, htmlAttributes: new { style = "width:100%; max-width:100%" })
                        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="ارسال" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }


        <br />
        <br />
    </div>







