@model GovEgy_2.Models.Contact

@{
    ViewBag.Title = "Create";
}
<div class="inner-banner ">
    <section class="w3l-breadcrumb text-left">
        <div class="container">
            <ul class="breadcrumbs-custom-path">
            </ul>
        </div>
    </section>
</div>
<div class="d-flex flex-column text-center mb-5 pt-5">
    <h4 class="logo" style="font-style: normal; font-size: 30px;font:bolder  ">تواصل معنا  <span class="text-danger">لأي استفسار</span></h4>

</div>

@if (User.IsInRole("Admin"))
{
    <div class="btn btn-style btn-light mt-sm-3" href="about.html" style="color:white;text-align:center">
        @Html.ActionLink("صفحة اتصالاتنا", "Index")<i class="fa fa-arrow-right ml-2" aria-hidden="true"></i>
    </div>
}
    <hr />
    <br />
    <div style="margin-left:25%;margin-right:25%">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">اسمك</h4>

                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">بريدك الالكتروني</h4>

                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">رقم تليفونك</h4>

                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h4 style="text-align:center">رسالتك</h4>

                        @Html.TextAreaFor(model => model.Message, 10, 40, htmlAttributes: new { style = "width:100%; max-width:100%" })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="ارسال الرسالة" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>