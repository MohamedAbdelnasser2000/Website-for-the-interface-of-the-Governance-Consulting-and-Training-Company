@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-left">
    <li style="margin-right:30px;"><a href="javascript:document.getElementById('logoutForm').submit()">  تسجيل الخروج </a></li>
    <li style="margin-right: 30px">
        @Html.ActionLink("" + User.Identity.GetUserName() + "", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>

</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-left " style="font-size: large">
        <li class="nav-item " style="margin-right:30px;">@Html.ActionLink("تسجيل دخول الأعضاء", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li class="nav-item " style="margin-right: 30px;">@Html.ActionLink("انشاء عضوية ", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

    </ul>
}

